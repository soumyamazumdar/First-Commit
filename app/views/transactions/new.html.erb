<div class="container transaction-new">
  <h1>new transaction</h1>


  <%= form_for (@transaction) do |tran| %>
    <p>  
      Select Number Of Stocks: <%= tran.select :stocks_bought, options_for_select(1..@stav), { prompt: "select" } %><br />
    </p>
   
     <p>
      <%= tran.hidden_field :comp_id, readonly:true , value: @company_id %><br />
      <%= tran.hidden_field :stock_id, readonly:true , value: @stock_id %><br />
       <%= tran.hidden_field :user_id, readonly:true , value: @user_id %><br />

      </p>
    <% if @stav>0 %>  
      <%= tran.submit 'Buy Stock' %>
    <% else %>
      <p>Not Available</p>
    <% end %>    
    <%= link_to 'Back', company_path(Stock.find_by_id(@stock_id).company) %>

  <% end %>  
</div>  